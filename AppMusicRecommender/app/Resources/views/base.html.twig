<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css" integrity="sha384-aUGj/X2zp5rLCbBxumKTCw2Z50WgIr1vs/PFN4praOTvYXWlVyh2UtNUU0KAUhAX" crossorigin="anonymous">

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script>

            function loadSong(id_song, id_track) {
                $("#load").show();
                $('html, body').animate({
                    scrollTop: 0,
                }, 1000);

                $.ajax({
                    url: "{{ path('publishActivity') }}",
                    type: "GET",
                    data: {
                        idSong: id_song,
                        idTrack: id_track
                    },
                    success: function (response) {
                        if (response.preview == null) {
                            $("#imgSong").prop("src", 'http://sisplade.oaxaca.gob.mx/directorio/images/NoDisponibleText.png');
                        } else {
                            $("#imgSong").prop("src", response.image);
                            $("#object").html('<audio controls autoplay style="width: 100%"><source src="' + response.preview + '" type="audio/ogg" /><source src="' + response.preview + '" type="audio/mpeg" /></audio>');
                        }
                        $("#player").show();
                        $("#load").fadeOut();
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.log(textStatus, errorThrown);
                        $("#load").fadeOut();
                    }

                });
            }

            $(document).ready(function () {
                $.ajax({
                    url: "{{ path('getRecomenderBySinger') }}",
                    type: "GET",
                    success: function (response) {
                        if (response != null)
                            $("#recommender").html(response);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.log(textStatus, errorThrown);

                    }

                });
            });


        </script>

    </head>
    <body>
        {% block top %}{% endblock %}
        <div>
            <div class="panel-body" id="load"
                 style="display:none;position: absolute; width: 100%;height: 500%; z-index:111111;text-align: center;background-color: #FFFFFF;">
                <img src="http://linux.m2osw.com/sites/linux.m2osw.com/files/images/waiting-wheel-300x300.gif">
            </div>
        </div>


        <div class="col-xs-12 col-md-3" id="recommender">&nbsp;</div>
        <div class="col-xs-12 col-md-7" style="top:19px">
            {% block input %} {% endblock %}
            <div class="col-xs-12 col-md-12">{% block body %}{% endblock %}</div>
            <div class="col-xs-12 col-md-12">{% block bodyHome %}{% endblock %}</div>

        </div>

        {% block javascript %}



        {% endblock %}
    </body>
</html>
