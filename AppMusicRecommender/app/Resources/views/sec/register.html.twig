{% extends 'top.html.twig' %}

{% block body %}

    {% if  form_errors(form) %}

        <div class="alert alert-danger" role="alert">
            <a href="#" class="alert-link">Error en el formulario</a>
        </div>

    {% endif %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Registro </h3>

        </div>
        <div class="panel-body">
            <form action="{{ path('user_registration') }}" method="post">
                <div class="input-group">
                    <label for="exampleInputEmail1">Usuario</label>
                    {{ form_widget(form.username, { 'attr': {'placeholder':'Usuario','class': 'form-control', 'aria-describedby':'basic-addon1'} }) }}
                </div>
                <br>


                <div class="input-group">
                    <label for="exampleInputEmail1">Email address</label>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'aria-describedby':'basic-addon1'} }) }}
                </div>
                <br>

                <div class="input-group">
                    <label for="exampleInputEmail1">Contraseña</label>
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'aria-describedby':'basic-addon1'} }) }}
                </div>
                <br>

                <div class="input-group">
                    <label for="exampleInputEmail1">Confirmar contraseña</label>
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'aria-describedby':'basic-addon1'} }) }}
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="user_termsAccepted" name="user[termsAccepted]" required="required"
                               value="1"> Aceptar condiciones
                    </label>
                </div>

                {{ form_row(form._token) }}
                <div style="text-align: right;">
                    <button type="submit" class="btn btn-default">Registrarse</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
